<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Properties"
    width="{Long}500"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <text
                jcr:primaryType="cq:Widget"
                fieldLabel="ButtonText"
                name="./buttonText"
                xtype="textfield"/>
        <colorSelector
                jcr:primaryType="cq:Widget"
                fieldLabel="ButtonColor"
                name="./buttonColor"
                type="select"
                xtype="selection">
            <options
                    jcr:primaryType="cq:WidgetCollection">
                <blue jcr:primaryType="nt:unstructured"
                    text="Blue"
                    value="blue" />

                <green jcr:primaryType="nt:unstructured"
                    text="Green"
                    value="green"/>

            </options>
        </colorSelector>
    </items>
</jcr:root>
